<h2>All Articles</h2>
<p><%= link_to "Add New Article", new_article_path %></p>
<table>
	<tr>
		<th>Title</th>
		<th>Description</th>
		<th>Actions</th>

	</tr>
	<% @articles.each do |a| %>
	<tr>
		<td><%= a.title %></td>
		<td><%= a.description %></td>
		<td><%= link_to "Edit", edit_article_path(a) %> | <%= link_to "Show", article_path(a) %> | <%= link_to "Delete", article_path(a), method: :delete, data: { confirm: "Are you sure you want to delete?" } %></td>
	</tr>
	<% end %>
</table>

<p><%= link_to "Home", root_path %></p>