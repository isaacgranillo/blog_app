<h2 align="center" class="article_page_title">All Articles</h2>
	<% @articles.each do |a| %>
		<div class="row">
			<div class="col-xs-8 col-xs-offset-2">
				<div class="well well-lg article_show">
					<div class="article_title">
						<%= link_to a.title, article_path(a) %>
					</div>
					<div class="article_description">
						<%= truncate(a.description, length: 200) %>
						<div class ="article-details">
							<small>Created by: <%= a.user.username if a.user%>
								<%= time_ago_in_words(a.created_at) %> ago,
								last updated: <%= time_ago_in_words(a.updated_at) %> ago </small>
						</div>
					</div>
					<div class="article_actions">
						<%= link_to "Edit the Article", edit_article_path(a), class: "btn btn-xs btn-primary" %>
						<%= link_to "Delete the Article", article_path(a), method: :delete, data: { confirm: "Are you sure you want to delete?" }, class: "btn btn-xs btn-primary" %>
					</div>
				</div>
			</div>
		</div>
	<% end %>
