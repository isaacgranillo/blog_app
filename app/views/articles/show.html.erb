<h3 align="center" class="article_page_title"><strong>Title:</strong> <%= @article.title %></h3>
<div class="well col-xs-8 col-xs-offset-2 article_show">
	<ul class="listing">
		<div class="row center">
			<div class="col-md-4 col-md-offset-4">
				<li><b>Written By:</b></li>
				<li><%= link_to gravatar_for(@article.user), user_path(@article.user)%></li>
				<li class="article_title"><%= link_to @article.user.username, user_path(@article.user) %></li>
				<li><small><%= pluralize(@article.user.articles.count, "article") if @article.user.articles%></small></li>
			</div>
		</div>
	</ul>	
	<div class="article_show_box">
		<h4 class="center"><strong>Description: </strong></h4>
			<span align="center"><%= simple_format(@article.description) %></span>
	</div>
	<div class="article_actions">
		<%= link_to "Edit the Article", edit_article_path, class: "btn btn-xs btn-primary" %>
		<%= link_to "Delete the Article", article_path(@article), method: :delete, data: { confirm: "Are you sure you want to delete?" }, class: "btn btn-xs btn-primary" %>
		<%= link_to "View All Articles", articles_path, class: "btn btn-xs btn-primary" %>
	</div>
</div>