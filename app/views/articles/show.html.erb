<h3 align="center">Title: <%= @article.title %></h3>
<div class="well col-xs-8 col-xs-offset-2 article_show">
	<h4 class="center"><strong>Description: </strong></h4>
		<%= simple_format(@article.description) %>
	<div class="article_actions">
		<%= link_to "Edit the Article", edit_article_path, class: "btn btn-xs btn-primary" %>
		<%= link_to "Delete the Article", article_path(@article), method: :delete, data: { confirm: "Are you sure you want to delete?" }, class: "btn btn-xs btn-danger" %>
		<%= link_to "View All Articles", articles_path, class: "btn btn-xs btn-warning" %>
	</div>
</div>